{
    "compilerOptions": {
        "rootDir": "./",
        "outDir": "./dist",
        "module": "ES2020",
        "target": "ES2022",
        "allowJs": true,
        "lib": ["DOM", "ES2022"],
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "esModuleInterop": true,
        "jsx": "react",
        "resolveJsonModule": true
    }
}